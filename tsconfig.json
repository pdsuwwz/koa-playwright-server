{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    // "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["dom", "esnext"],
    "types": ["playwright", "node"],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
