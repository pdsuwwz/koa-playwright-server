{
  "name": "koa-playwright-server",
  "version": "0.2.1",
  "description": "Koa + TypeScript + Rollup + Playwright",
  "license": "MIT",
  "author": "Wisdom <pdsu.wwz@foxmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/pdsuwwz/koa-playwright-server.git"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "nodemon",
    "watch": "babel-node src/main.ts --extensions \".ts\"",
    "clean:dist": "rm -rf ./dist",
    "build": "pnpm clean:dist && rollup --c --bundleConfigAsCjs --configPlugin @rollup/plugin-typescript",
    "tsbuild": "pnpm clean:dist && tsc && tsc-alias",
    "start": "pm2 start ecosystem.config.js --env production",
    "restart": "pm2 restart ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js",
    "delete": "pm2 delete ecosystem.config.js",
    "delete:all": "pm2 delete all",
    "wc": "pm2 list",
    "lint": "eslint . --ext .js,.ts --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@playwright/test": "^1.40.1",
    "dotenv": "^16.3.1",
    "koa": "^2.15.0",
    "koa-bodyparser": "4.4.1",
    "koa-router": "^12.0.1",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.40.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-typescript": "^7.23.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/bluebird": "^3.5.42",
    "@types/koa": "^2.13.12",
    "@types/koa-bodyparser": "4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/koa__cors": "^5.0.0",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "axios": "^1.6.4",
    "babel-plugin-module-resolver": "^5.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "rollup": "^4.9.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "ts-toolbelt": "^9.6.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "tags": [
    "koa",
    "typescript",
    "puppeteer",
    "playwright",
    "pm2",
    "nodemon",
    "eslint",
    "rollup",
    "babel"
  ]
}
